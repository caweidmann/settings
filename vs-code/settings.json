// Place your settings in this file to overwrite the default settings
// When window.zoomLevel = 0, then:
// "editor.fontSize": 10.5
// "editor.lineHeight": 18
// When window.zoomLevel = -0.5, then:
// "editor.fontSize": 11
// "editor.lineHeight": 20
// Ligature fonts
// Fira Code = 10.5
// Monoid = 9
// Standard fonts
// Hack = 10.5
// Input Mono = 10.5
// Mononoki = 10.5
// Office Code Pro = 10.5
// Code New Roman = 10.5
{
    "editor.fontSize": 11.5,
    "editor.lineHeight": 20,
    "editor.tabSize": 2,
    "editor.roundedSelection": false,
    "editor.renderIndentGuides": true,
    "editor.minimap.enabled": false,
    "explorer.openEditors.visible": 0,
    "window.zoomLevel": 0,
    "editor.autoClosingBrackets": false,
    "editor.find.seedSearchStringFromSelection": false, // here
    "editor.formatOnPaste": false, // here
    "editor.formatOnSave": true, // here
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "diffEditor.renderSideBySide": false,
    "workbench.colorTheme": "Tomorrow",
    "prettier.requireConfig": true,
    // "workbench.fontAliasing": "antialiased",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.quickSuggestions": false,
    "explorer.confirmDelete": false,
    // "eslint.autoFixOnSave": true,
    // "editor.fontLigatures": true,
    // "editor.fontFamily": "Fira Code", // Code New Roman, Hack, Input Mono
    "[handlebars]": {
      "editor.formatOnSave": false
    },
    "[html]": {
      "editor.formatOnSave": false,
      "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[markdown]": {
      "editor.formatOnSave": false
    },
    "explorer.confirmDragAndDrop": false,
    "javascript.suggest.autoImports": false,
    "typescript.suggest.autoImports": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "prettier.eslintIntegration": true,
    "prettier.semi": false,
    "prettier.singleQuote": true,
    "prettier.stylelintIntegration": true,
    "editor.formatOnType": false,
    "emment.includeLanguages": {
      "vue-html": "html",
      "javascript": "javascriptreact"
    },
    "emmet.triggerExpansionOnTab": true,
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "search.useIgnoreFiles": false,
    // "[javascript]": {
    //   "editor.codeActionsOnSave": {
    //     "source.organizeImports": true
    //   }
    // }
}
